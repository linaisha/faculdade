package exercicios;

import java.util.Scanner;

public class exercicio01 {
	public static void main(String[]args) {
		
		Scanner input = new Scanner(System.in);
		double h, l, area;
		
		System.out.println("Informe o valor da altura: ");
		h = input.nextDouble();
		System.out.println("Informe o valor da largura: ");
		l = input.nextDouble();
		
		area = h*l;
		
		System.out.println("\nA altura do ret칙ngulo: " + h);
		System.out.println("\nA largura do ret칙ngulo: " + l);
		System.out.println("\nA 치rea do ret칙ngulo: " + area);
		
	}
}
